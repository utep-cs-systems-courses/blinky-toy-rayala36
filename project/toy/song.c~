#include <msp430.h>
#include "libTimer.h"
#include "buzzer.h"
#include "led-sound.h"

void song(){

    // Define the note frequencies (in Hz) for each note in the riff
    int notes[] = {659, 784, 880, 659, 784, 880, 784, 659, 784, 880, 659, 784, 880, 784, 880, 784};

    // Define the note durations (in milliseconds)
    int durations[] = {200, 200, 400, 200, 200, 400, 200, 200, 200, 200, 200, 200, 200, 200, 200, 400};

    int num_notes = sizeof(notes) / sizeof(notes[0]);

    int i;
    for (i = 0; i < num_notes; i++) {
      buzzer_set_period(notes[i]);
      __delay_cycles(durations[i] * 1000);
      buzzer_set_period(0);  // Stop the tone
      __delay_cycles(50000); // Add a short pause between notes
    }
}
